DROP DATABASE IF EXISTS sensor_data;

CREATE DATABASE sensor_data;

USE sensor_data;

DROP TABLE IF EXISTS `measured_data`;

CREATE TABLE `measured_data` (
  `id` INT AUTO_INCREMENT NOT NULL,
  `recorded_date` DATETIME DEFAULT CURRENT_TIMESTAMP,
  `device` INT NOT NULL,
  `battery_voltage` INT NOT NULL,
  `relative_humidity` INT NOT NULL,
  `soil_temperature` INT NOT NULL,
  `soil_conductivity` INT NOT NULL,
  `soil_relative_permittivity` INT NOT NULL,
  PRIMARY KEY (`id`)
) ;

SELECT * FROM measured_data;
SHOW WARNINGS;